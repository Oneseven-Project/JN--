/* pages/address_add/address_add.wxss */
.adress-add{
  position: relative;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.adress-add-cell{
  height: 113rpx;
  line-height: 113rpx;
  position: relative;
}
.address-add-label{
  color: #332500;
  font-size: 32rpx;
  margin-top: 40rpx;
  padding-bottom: 20rpx;
}
.adress-add-input{
  display: inline-block;
  position: absolute;
  left: 168rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #332500;
  font-size: 32rpx;
  padding: 10rpx 0;
  max-width: 502rpx;
  width: 502rpx;
}
.placeholder-text{
  font-size: 32rpx;
  color: #ccc;
}
.address-icon-arrow{
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 26rpx;
  color: #332500;

}
.adress-add-textare{
  display: inline-block;
  font-size: 32rpx;
  color: #332500;
  height: 81rpx;
}
.adress-add-default{
  height: 113rpx;
  line-height: 113rpx;
  
}
.adress-add-default-checkbox{
  /* zoom: 60%; */
  margin-right: 10rpx;
  color: #332500;
  font-size: 32rpx; 
}
.checkbox-text{
  color: #332500;
  font-size: 32rpx;
}
.adress-add-btn{
  background: #FF9C2B;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  margin-top: 120rpx;
}
.picker-text-placeholder{
  color: #ccc;
  font-size: 32rpx;
}