/* pages/search/search.wxss */
.classify{
  display: flex;
  flex-flow: row;
  height: 100vh;
  overflow: hidden;
  border-top: 1rpx solid #e6e6e6;
}
.classify-left{
  width: 180rpx;
  height: 100vh;
  background: #FAF9F7;
  overflow-x: hidden;
  overflow-y: scroll; 
}
.classify-left-item{
  padding: 35rpx 37rpx;
  font-size: 26rpx;
  line-height: 32rpx;
  position: relative;
}
.classify-left-text{
  max-height: 64rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -moz-box-orient: vertical;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.classify-left-item::after{
  content: '';
  position: absolute;
  height: 1px;
  bottom: 0;
  left: 0;
  right: 0;
  background: #F2F2F2;
  transform: scaleY(0.5); 
}
.activated{
  background: #fff;
  color: #FF9C2B;
}
.activatedTag{
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 40rpx;
  width: 6rpx;
  background: #FF9C2B;
}
.classify-right{
  flex: 1;
  width: 100%;
  overflow-x: hidden;
  overflow-y: scroll;
}
.classify-right-title{
  width: 100%;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  color: #332500;
  box-sizing: border-box;
}
.classify-title-text{
  flex: 1;
  vertical-align: middle;
  font-size: 24rpx;
}
.classify-title-more{
  flex: 1;
  text-align: right;
  vertical-align: middle;
  font-size: 24rpx;
  color: #999;
}
.icon-Arrow{
  font-size: 13rpx;
  vertical-align: middle;
  color: #999;
  display: inline-block;

}
.classify-right-content{
  width: 100%;
  overflow: hidden;
}
.classify-right-detail{
  float: left;
  width: 33.33%;
  text-align: center;
  margin-top: 40rpx;
  box-sizing: border-box;
}
.classify-item-imgBox{
  width: 140rpx;
  height: 140rpx;
  position: relative;
  margin: 0 auto;
}
.classify-item-img{
  width: 140rpx;
  height: 140rpx;
  display: block; 
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.classify-item-name{
  font-size: 24rpx;
  color: #332500;
  text-align: center;
  margin-top: 20rpx;
  display: block;
}