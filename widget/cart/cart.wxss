/* widget/cart/cart.wxss */
@import "../../assets/iconfont/iconfont.wxss";
.cart-box{
  width: 90rpx;
  height: 90rpx;
  background: rgba(51,37,0,0.85);
  z-index: 14;
  border-radius: 50%;
  position: relative;
}
.cart-icon{
  position: absolute;
  left: 50%;top: 50%;
  transform: translate(-50%,-50%);
  color: #fff;
  font-size: 48rpx;
}
.cart-num{
  height: 36rpx;
  width: 36rpx;
  position: absolute;
  right: 0;
  top: 0;
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  background: #FF5344;
}