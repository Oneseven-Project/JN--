/* widget/showmodel/showmodel.wxss */
@import "/assets/style/1px.wxss";
.jn-model{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 11;
}
.jn-model-box{
  max-height: 563rpx;
  position: fixed;
  left: 105rpx;
  right: 105rpx;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 12rpx;
  background: #fff;
  z-index: 12
}
.jn-model-heade{
  text-align: center;
  font-size: 32rpx;
  height: 110rpx;
  line-height: 110rpx;
  color: #332500;
}
.jn-model-content{
  background: #fafafa;
  max-height: 353rpx;
  /* overflow-x: hidden;
  overflow-y: scroll; */
}
.good-list{
  width: 100%;
  position: relative;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
  overflow: hidden;
  display: table;
}
.good-list::before{
  clear: both;
}
.good-list-imgbox{
  display: table-cell;
  vertical-align: middle;
  float: left;
  width: 120rpx;
}
.good-list-img{
  width: 120rpx;
  height: 120rpx;
  vertical-align: middle;
}
.good-list-goodinfo{
  display: table-cell;
  vertical-align: middle;
  margin-left: 20rpx;
}
.good-title{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.good-title-name{
  flex: 1;
  max-width: 240rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #332500;
  font-size: 24rpx;
}
.good-good-num{
  width: 70rpx;
  font-size: 28rpx;
  text-align: right;
}
.good-good-saleout{
  width: 70rpx;
  font-size: 24rpx;
  text-align: right;
  color: #FF5344;
}
.good-price{
  font-size: 24rpx;
  color: #332500;
}
.good-price-old{
  text-decoration: line-through;
}
.good-price-new{
  color: #FF5344;
}
.jn-model-foot{
  width: 100%;
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
}
.jn-model-btn{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #EF9128;
}