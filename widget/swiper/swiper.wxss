/* widget/swiper/swiper.wxss */
@import "/assets/style/1px";
.jn-swiper{
  width: 100%; 
  position: relative;
  overflow: hidden;
}
.jn-swiper-1px{
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 1px;
  width: 89.33%;
}
.jn-swiper-sm{
  width: 100vw;
  box-sizing: border-box;
}
.jn-swiper-md{
   width: 100vw;
  box-sizing: border-box;
}
.jn-swiper-head{
  display: table;
  box-sizing: border-box;
  padding: 0 40rpx;
  width: 100%;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}
.jn-swiper-title{
  display: table-cell;
  vertical-align: middle;
  width: 70%;
}
.jn-swiper-mainTitle{
  font-size: 40rpx;
  color: #332500;
  font-weight: 600;
  display: inline-block;
}
.jn-swiper-subTitle{
  color: #999;
  font-size: 24rpx;
}
.jn-swiper-more{
  display: table-cell;
  vertical-align: middle;
  width: 30%;
  text-align: right;
  color: #999;
  font-size: 28rpx;
}
.countdown{
  display: inline-block;
  margin-left: 10rpx;
  position: relative;
  overflow: hidden;
  line-height: 40rpx;
  transform:translateY(8rpx);
}
.jn-swiper-scroll{
  width: 100%;
  position: relative;
  -webkit-overflow-scrolling: touch;
}
.jn-swiper-sm .jn-swiper-wrap{
  box-sizing: border-box;
  padding-left: 40rpx;
  max-width: 9999vw;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding-bottom: 40rpx;
}
.swiper-item{
  padding-right: 20rpx;
  max-width: 210rpx;
  position: relative;
}
.swiper-item-price{
  line-height: 36rpx;
}
.swiper-item:last-of-type {
  padding-right: 40rpx;
}
.swiper-item-imgbox{
  max-width: 210rpx;
  text-align: center;
  position: relative;
}
.swiper-item-img{
  width: 210rpx;
  height: 210rpx;
  vertical-align: middle;
  border-radius: 8rpx;
}
.swiper-item-title{
  width: 100%;
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #332500;
  line-height: 36rpx;
  min-height: 72rpx;
  max-height: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.swiper-item-price-tag{
  font-size: 22rpx;
  font-weight: 600;
  color: #FF9C2B;
}
.swiper-item-price-intNum{
  font-size: 28rpx;
  color: #FF9C2B;
  font-weight: 600;
}
.swiper-item-originPrice{
  color: #999;
  text-decoration: line-through;
  font-size: 24rpx;
  margin-left: 10rpx;
}
.swiper-sale-limit{
  position: absolute;
  bottom: 0;
  left: 0;
  background: red;
  font-size: 22rpx;
  color: #fff;
  padding: 0 10rpx;
  border-radius: 8rpx;
}
.swiper-sale-out{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: rgba(0, 0, 0, 0.6);
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.sale-out-cn-txt{
  color: #fff;
  font-size: 28rpx;
  margin-top: 50rpx;
}
.sale-out-en-txt{
  color: #fff;
  font-size: 12rpx;
}
.jn-swiper-md .jn-swiper-wrap{
  box-sizing: border-box;
  padding-left: 40rpx;
  max-width: 9999vw;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap; 
}
.jn-swiper-md .swiper-item-md{
  display: inline-block;
  padding-right: 20rpx;
  border-radius: 6rpx;
}
.swiper-item-mdImg{
  width: 325rpx;
  border-radius: 6rpx;
}
.font_gray{
  color: #999;
}