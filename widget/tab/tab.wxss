/* widget/tab/tab.wxss */
tabs{
  height: 70rpx;
  line-height: 70rpx;
  white-space: nowrap;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 999;
  background: #fff;
}
.tabs-scroll{
  width: 100%;
  height: 70rpx;   
  white-space:nowrap;
  position: relative;
}

.tab-1px{
  height: 2rpx;
  width: 100%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.10);
}
.tabs-tabItem{
  display: inline-block;
  padding: 0 31rpx;
  height: 70rpx;
  line-height: 70rpx;
  max-width: 7em;
  min-width: 72rpx;
  font-size: 28rpx;
  font-weight: 600; 
  position: relative;
  text-align: center;
}
.tab-text{
  font-size: 30rpx;
  font-weight: normal; 
}
.activatedTab{
  color: #FF9C2B;
}
.tabs-item-active{
  position: absolute;
  left: 50%;
  min-width: 2em;
  max-width: 7em;
  transform: translateX(-50%);
  bottom: 0rpx;
  height: 6rpx;
  background: #FF9C2B;
  z-index: 9;
}