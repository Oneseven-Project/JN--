/* widget/toast/toast.wxss */
.jn-toast{
  position: fixed;
  left: 50%;
  top:50%;
  transform: translate(-50%,-50%);
  padding: 30rpx 40rpx;
  max-width: 80%;
  background: rgba(0, 0, 0, 0.7);
  text-align: center;
  border-radius: 10rpx;
  z-index: 9999;
  /* opacity: 0.2; */
}
.jn-toast-text{
  display: block;
  text-align: center; 
  color: #fff;
  font-size: 28rpx;
}